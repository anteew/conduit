{
  "name": "conduit",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --loader ts-node/esm src/index.ts",
    "build": "tsc -p .",
    "test:compile": "tsc tests/*.test.ts tests/harness.ts --module ES2022 --target ES2022 --moduleResolution Node --allowSyntheticDefaultImports --outDir tests_compiled",
    "test:unit": "npm run test:compile && node tests_compiled/http_bidir.test.js",
    "test:int": "npm run test:compile && node tests_compiled/ws_bidir.test.js",
    "bench:small": "npm run test:compile && node tests_compiled/perf_small.test.js",
    "bench:large": "npm run test:compile && node tests_compiled/large_payload.test.js",
    "test:load-ws": "npm run test:compile && node tests_compiled/concurrent_ws.test.js",
    "test:load-uploads": "npm run test:compile && node tests_compiled/concurrent_uploads.test.js"
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@types/ws": "^8.18.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "ws": "^8.18.3"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  }
}